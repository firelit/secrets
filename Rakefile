require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "secrets"
    gem.summary = %|Keeps secrets for your team.|
    gem.description = %|Keep encrypted passwords and API keys for your team in a repository.|
    gem.email = "design@firelit.com"
    gem.homepage = "http://github.com/firelit/secrets"
    gem.authors = ["Eric Bigoness"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end